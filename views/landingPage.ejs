        </form>
        <form class="redirectForm" action="forgotPass" method="get">
          <button class="buttons" type="submit" name="forgotPass" value="true">Forgot Password</button>
        </form>
        <form class="redirectForm" action="register" method="get">
          <button class="buttons" type="submit" name="register" value="true">Register</button>
        </form>
      </div>
    </div>
  </body>
  <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
